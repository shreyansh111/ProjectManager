<%-include("partials/header")%>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add a New Task</h1>
		<div style="width: 30%; margin: 30px auto">
			<form action="/<%=task._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="task[name]"> Name</label>
					<input type="text" name="task[name]" placeholder="name" class="form-control" required value="<%=task.name%>">
				</div>
				<div class="form-group">
					<label for="task[discription]"> Description</label>
					<input type="text" name="task[discription]" placeholder="description" class="form-control" required value="<%=task.discription%>">
				</div>
	            <div class="form-group">
					<label for="task[Days]"> Days</label>
					<input type="number" name="task[Days]" placeholder="days" class="form-control" required min=0 value="<%=task.Days%>">
				</div>
	            <div class="form-group">
	            	<label for="task[progess]">Progress</label>
	            	<input type="number" name="task[progess]" placeholder="progress" class="form-control" required min="0" max="100"   value="<%=task.progess%>">
	            </div>
	            <div class="form-group">
	            	<button type="submit" class="btn btn-prmimary btn-block" style="color: grey;">Submit</button>
	            </div>
	
	
	
            </form>
            <a href="/show/<%=task._id%>" class="btn btn-default">Go Back</a>
		</div>
	</div>
</div>
<%-include("partials/footer")%>
