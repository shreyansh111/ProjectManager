<%-include("partials/header")%>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add a New Task</h1>
		<div style="width: 30%; margin: 30px auto">
			<form action="/team" method="POST">
				<div class="form-group">
					<label for="team[name]"> Name</label>
					<input type="text" name="team[name]" placeholder="name" class="form-control" required>
				</div>
				<div class="form-group">
					<label for="team[discription]"> Description</label>
					<input type="text" name="team[discription]" placeholder="description" class="form-control" required>
				</div>
	            <div class="form-group">
					<label for="team[Days]"> Days</label>
					<input type="number" name="team[Days]" placeholder="days" class="form-control" required min=0>
				</div>
	           
	            <div class="form-group">
	            	<button type="submit" class="btn btn-prmimary btn-block" style="color: grey;">Submit</button>
	            </div>
	
	
	
            </form>
            <a href="/" class="btn btn-default">Go Back </a>
		</div>
	</div>
</div>
<%-include("partials/footer")%>